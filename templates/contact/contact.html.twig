{% extends 'base.html.twig' %}
{% block title %}Contact{% endblock %}
{% block body %}
<section>
    <div class="titles"
        data-aos="fade-right" 
        data-aos-duration="1000"
        data-aos-easing="ease-in-sine">
        <hr class="project"/>
        <div class="title_h2">
            <h2>Contact</h2>
        </div>       
    </div>
    <br>
    <div class="content_contact">
        <div class="information">
            <p>Pour une question ou juste envie <br/> d'une discution</p>
            {% for user in users %}
            <div>
                 <span><ion-icon name="mail-outline" class="icon_contact"></ion-icon><a href="mailto:{{ user.email }}">{{ user.email }}</a></span>
                    <span><ion-icon name="call-outline" class="icon_contact phone"></ion-icon><a href="tel:{{ user.phone }}">{{ user.phone }}</a></span>
            </div>
            {% endfor %}
        </div>   
        
    </div>
</section>
{% endblock %}
